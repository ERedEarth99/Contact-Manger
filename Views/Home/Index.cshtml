@model List<Contact>
@{
    ViewData["Title"] = "My Contacts";
}

<div class="mb-2">
    <a asp-controller="Contact" asp-action="Add">Add New Contact</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Category</th>
            <th>Organization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.Firstname</a></td>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">@contact.Lastname</a></td>
                <td>@contact.Email</td>
                <td>@contact.Phone</td>
                <td>@contact.Category?.Name</td>
                <td>@contact.Organization</td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">Edit</a> |
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug"  class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>